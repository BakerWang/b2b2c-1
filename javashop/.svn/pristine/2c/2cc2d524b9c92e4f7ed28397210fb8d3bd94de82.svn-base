/**/
.admin-main {margin: 15px;}
.dropdown{
    position: relative;
    vertical-align: middle;
}
.dropdown-menu{
    background-color: whitesmoke;
    display: none;
    position: absolute;
    left: 23%;
    border-radius: 5px;
    z-index: 1000;
}
.dropdown-menu li{
    width: 114px;
    height: 29px;
    text-align: center;
    line-height: 29px;
}
.dropdown-menu li i{
    padding-right: 10px;
}
.dropdown-menu li:hover {
    background-color: #5FB878;
}
.dataTables_scrollBody{
    overflow:visible !important
}
